<Window x:Class="Chat_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
	<Grid>
		<ListBox x:Name="listBox_chat" Margin="115,39,115,181"/>
		<TextBox x:Name="textBox_message" HorizontalAlignment="Left" Margin="115,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="525"/>
		<Button x:Name="button_send" Content="Send" HorizontalAlignment="Left" Margin="654,265,0,0" VerticalAlignment="Top" Click="button_send_Click"/>
		<TextBox x:Name="textBox_username" HorizontalAlignment="Left" Margin="500,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185"/>
		<Button x:Name="button_login" Content="Login" HorizontalAlignment="Left" Margin="705,19,0,0" VerticalAlignment="Top" Click="button_login_Click"/>

	</Grid>
</Window>
