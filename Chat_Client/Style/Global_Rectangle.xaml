<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/Style/Resources/Style_Brushes.xaml"/>
		<ResourceDictionary Source="/Style/Resources/Style_Effects.xaml"/>
	</ResourceDictionary.MergedDictionaries>

	<Style x:Key="RectangleStyle" TargetType="Rectangle">
		<Setter Property="Effect" Value="{StaticResource ShadowEffect}"/>
		<Setter Property="Fill" Value="{StaticResource BackgroundGradientBrush}"/>
		<Setter Property="Stroke" Value="{StaticResource BorderBrush}"/>
		<Setter Property="Opacity" Value="0.5"/>
	</Style>
</ResourceDictionary>